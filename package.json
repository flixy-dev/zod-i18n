{
  "name": "@flixy-dev/zod-i18n",
  "version": "0.0.1",
  "description": "A library for localizing zod error messages.",
  "repository": "git@github.com:flixy-dev/zod-i18n.git",
  "author": "VC-Semih <semihciftci.pro@gmail.com>",
  "license": "MIT",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "run-p dev:*",
    "dev:core": "pnpm --filter=@flixy-dev/zod-i18n-map dev",
    "dev:with-next-i18next": "pnpm --filter=with-next-i18next dev",
    "build": "pnpm --filter=@flixy-dev/zod-i18n-map build",
    "coverage": "pnpm --filter=@flixy-dev/zod-i18n-map test:coverage",
    "test": "pnpm --filter=@flixy-dev/zod-i18n-map test",
    "release": "pnpm --filter=@flixy-dev/zod-i18n-map release",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "oxfmt": "^0.24.0",
    "prettier": "^2.8.3",
    "semantic-release": "^20.1.0",
    "semantic-release-monorepo": "^7.0.5"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18",
    "npm": "please_use_pnpm_instead",
    "yarn": "please_use_pnpm_instead",
    "pnpm": ">=8.0.0"
  },
  "release": {
    "extends": "semantic-release-monorepo",
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      }
    ]
  }
}
